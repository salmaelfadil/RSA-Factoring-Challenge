#!/usr/bin/python3
import sys

def factorize_prime():
    try:
        with open(sys.argv[1]) as input_file:
            for i in input_file:
                i = int(i)
                if i % 2 == 0:
                        print("{}={}*{}".format(i, i // 2, 2))
                        continue
                j = 3
                while j < i // 2:
                    if i % j == 0:
                        print("{}={}*{}".format(i, i // j, ))
                        break
                    j = j + 2
                if j == (i // 2) + 1:
                    print("{}={}*{}".format(i, i, 1))
    except (IndexError):
        pass
factorize_prime()
